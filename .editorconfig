# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = double
max_line_length = 120

[*.js,*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
